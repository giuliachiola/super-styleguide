{
  "name": "super-styleguide",
  "version": "1.0.3",
  "description": "",
  "scripts": {
    "_____________________________Styles_____________________________": "",
    "stylelint": "stylelint 'src/scss/**/*.scss' || echo \"Stylelint failed for some file(s).\"",
    "clean:dev": "rimraf dist src/css/*.css",
    "scss:to:css:dev": "node-sass --output-style expanded src/scss/ -o src/css/",
    "css:to:postcss:dev": "postcss src/css --dir dist/css",
    "styles:dev": "npm run stylelint && npm run scss:to:css:dev && npm run css:to:postcss:dev",
    "_____________________________SVG_____________________________": "",
    "clean:svgo": "rimraf src/svg/svgo/*",
    "svg:optimize": "npm run clean:svgo && node scripts/svgo.js",
    "_____________________________Dev_______________________________": "",
    "watcher": "nodemon -e scss -x \"npm run styles:dev\"",
    "build:serve": "node ./scripts/uiengine build --watch --serve",
    "build": "npm run styles:dev && node ./scripts/uiengine build",
    "dev": "npm-run-all -l clean:dev --parallel build:serve watcher"
  },
  "author": "Giulia Chiola",
  "license": "ISC",
  "repository": "github:giuliachiola/super-styleguide",
  "devDependencies": {
    "@uiengine/adapter-ejs": "^3.1.5",
    "@uiengine/adapter-html": "^3.1.5",
    "@uiengine/core": "^3.1.5",
    "install": "^0.13.0",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.2",
    "node-sass": "^7.0.0",
    "nodemon": "^2.0.6",
    "normalize-scss": "^7.0.1",
    "npm": "^6.14.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass-mq": "^5.0.1",
    "stylelint": "^13.8.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "svgo": "^1.3.2"
  },
  "dependencies": {}
}
